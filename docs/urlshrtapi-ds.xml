<?xml version="1.0" encoding="UTF-8"?>
<datasources>
  <datasource jta="false"
      jndi-name="java:/urlshrtapi/jdbc/urlshrtapiDS" pool-name="urlshrtapiCP"
     enabled="true" use-ccm="false">
      <connection-url>jdbc:postgresql://vm-osstore2.csi.it:5478/postgres</connection-url>
     <driver-class>org.postgresql.Driver</driver-class>
      <driver>postgresql</driver>
      <transaction-isolation>TRANSACTION_READ_COMMITTED</transaction-isolation>
    <pool>
      <min-pool-size>2</min-pool-size>
      <max-pool-size>20</max-pool-size>
    </pool>
    <security>
      <user-name>geoadmin_conf</user-name>
      <password>geoadmin16</password>
    </security>
    <validation>
      <validate-on-match>true</validate-on-match>
      <background-validation>false</background-validation>
    </validation>
    <statement>
      <track-statements>true</track-statements>
      <share-prepared-statements>false</share-prepared-statements>
    </statement>
  </datasource>
  <drivers>
    <driver name="postgresql" module="org.postgresql">
      <xa-datasource-class>org.postgresql.xa.PGXADataSource</xa-datasource-class>
    </driver>
  </drivers>
</datasources>